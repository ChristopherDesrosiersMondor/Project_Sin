generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model Item {
  id                String          @id @default(uuid())
  name              String
  prerequisites     String
  description       String
  marketPrice       Int
  craftingCost      Int
  craftingMaterials String
  craftingModes     String
  maxPerDowntime    Int
  placement String
}